<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:theme="@style/Theme.AppCompat.Light"
    >

    <TextView
        android:id="@+id/product_line"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="530dp"
        android:layout_marginTop="10dp"
        android:text="@string/basket_item_placeholder"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="530dp"
        android:layout_marginTop="10dp"
        android:text="@string/basket_item_placeholder"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/product_expenditure"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginEnd="330dp"
        android:layout_gravity="end|center_vertical"
        android:paddingStart="10dp"
        android:text="@string/basket_item_placeholder"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:background="@drawable/border_solid"
        />

    <TextView
        android:id="@+id/product_reference"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginEnd="130dp"
        android:layout_gravity="end|center_vertical"
        android:paddingStart="10dp"
        android:text="@string/basket_item_placeholder"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:background="@drawable/border_solid"
        />

    <EditText
        android:id="@+id/count_input"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="65dp"
        android:background="@drawable/etra_border"
        android:hint="0"
        android:gravity="center"
        android:textSize="30sp"
        android:singleLine="true"
        android:inputType="numberPassword"
        android:imeOptions="actionDone"
        android:focusedByDefault="false"
        android:autofillHints=""
        tools:ignore="HardcodedText"
        />

    <ImageButton
        android:id="@+id/product_delete_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:src="@drawable/delete_icon"
        android:background="@color/colorPrimaryLight"
        android:scaleType="fitCenter"
        android:elevation="5dp"
        android:contentDescription=""
        />

</FrameLayout>
