<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".HardwareTestActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:textSize="60sp"
            android:text="@string/test_shelf_id"
            />

        <EditText
            android:id="@+id/shelf_input"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:textSize="50sp"
            android:layout_gravity="right"
            android:singleLine="true"
            android:inputType="numberPassword"
            />

        <Button
            android:onClick="programShelf"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="@string/test_program"
            android:textSize="50sp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:textSize="60sp"
        android:text="@string/test_open_locker"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="1"
            android:tag="1"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="2"
            android:tag="2"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="3"
            android:tag="3"
            android:textSize="50sp"
            />


        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="4"
            android:tag="4"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="5"
            android:tag="5"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="6"
            android:tag="6"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openCurrentShelfLockers"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:text="@string/test_open_current"
            android:textSize="50sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="7"
            android:tag="7"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="8"
            android:tag="8"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="9"
            android:tag="9"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="10"
            android:tag="10"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="11"
            android:tag="11"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openSingleLocker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="12"
            android:tag="12"
            android:textSize="50sp"
            />

        <Button
            android:onClick="openAllLockers"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:text="@string/test_open_all"
            android:textSize="50sp"
            />

        <Button
            android:onClick="cancelOpenLockers"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:text="@string/test_cancel"
            android:textSize="50sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="@string/test_server_connection"
            android:textSize="60sp"
            />

        <Button
            android:onClick="testServerConnection"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:text="@string/test_server_connection_button"
            android:textSize="50sp"
            />

        <TextView
            android:id="@+id/server_connection_result"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:text="@string/test_server_connection_not_tested"
            android:textSize="60sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="60sp"
        />

</LinearLayout>
</ScrollView>