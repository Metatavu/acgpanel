<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dual_panel"
    tools:context=".ProductSelectionActivity">

    <TextView
        android:id="@+id/count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="660dp"
        android:layout_marginTop="40dp"
        android:text="@string/input_count"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- TODO align to end if we move cursor to end on touch -->
    <EditText
        android:id="@+id/count_input"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:background="@drawable/etra_border"
        android:hint="1"
        android:singleLine="true"
        android:inputType="numberPassword"
        android:imeOptions="actionDone"
        android:nextFocusForward="@id/ok_button"
        app:layout_constraintLeft_toLeftOf="@id/count_label"
        app:layout_constraintTop_toBottomOf="@id/count_label"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        />

    <TextView
        android:id="@+id/count_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/default_unit"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/count_input"
        app:layout_constraintTop_toTopOf="@id/count_input"
        />

    <TextView
        android:id="@+id/expenditure_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/expenditure"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/count_input"
        app:layout_constraintTop_toBottomOf="@id/count_input"
        />

    <TextView
        android:id="@+id/expenditure_input"
        android:onClick="inputExpenditure"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        app:layout_constraintRight_toRightOf="@id/count_units"
        app:layout_constraintLeft_toLeftOf="@id/expenditure_label"
        app:layout_constraintTop_toBottomOf="@id/expenditure_label"
        />

    <TextView
        android:id="@+id/reference_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/reference"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/expenditure_input"
        app:layout_constraintTop_toBottomOf="@id/expenditure_input"
        />

    <TextView
        android:id="@+id/reference_input"
        android:onClick="inputReference"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        app:layout_constraintRight_toRightOf="@id/count_units"
        app:layout_constraintLeft_toLeftOf="@id/reference_label"
        app:layout_constraintTop_toBottomOf="@id/reference_label"
        />

    <Button
        android:id="@+id/ok_button"
        android:onClick="proceed"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_dark"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:text="@string/ok"
        android:focusable="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <requestFocus />
    </Button>

    <!-- TODO use the notification system -->
    <TextView
        android:id="@+id/not_logged_in_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toLeftOf="@id/ok_button"
        app:layout_constraintBottom_toBottomOf="@id/ok_button"
        android:text="@string/not_logged_in_warning"
        android:textColor="@color/error"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/not_calibrated_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintRight_toLeftOf="@id/ok_button"
        app:layout_constraintBottom_toBottomOf="@id/ok_button"
        android:text="@string/not_calibrated_warning"
        android:textColor="@color/error"
        android:textSize="25sp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/product_picture"
        android:layout_width="520dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="" />

    <Button
        android:id="@+id/info_button"
        android:onClick="showDetails"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/info_icon"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:elevation="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/product_picture"
        app:layout_constraintRight_toRightOf="@id/product_picture"
        app:layout_constraintTop_toBottomOf="@id/product_picture"
        />

    <ScrollView
        android:id="@+id/product_description_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@id/product_picture"
        app:layout_constraintRight_toRightOf="@id/product_picture"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintBottom_toTopOf="@id/cancel_button"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_description"
            android:text=""
            android:textSize="22dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />
    </ScrollView>

    <Button
        android:id="@+id/cancel_button"
        android:onClick="cancel"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorPrimary"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:text="@string/cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/unlock_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>