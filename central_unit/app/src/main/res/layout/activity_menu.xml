<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:acgpanel="http://www.metatavu.fi/acgpanel"
    android:background="@drawable/bg_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    tools:ignore="Overdraw">

    <fi.metatavu.acgpanel.FileSystemImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_white"
        acgpanel:source="logo_white.png"
        android:layout_margin="30dp"
        android:layout_gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="" />

    <Button
        android:id="@+id/browse_products_button"
        android:onClick="browseProducts"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:text="@string/browse_products"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="bold"
        android:padding="50dp"
        android:background="@drawable/bg_lighter"
        android:layout_gravity="center"
        android:layout_marginRight="210dp"
        android:layout_marginBottom="110dp"
        android:elevation="8dp"
        />

    <Button
        android:id="@+id/quick_pick_button"
        android:onClick="quickPick"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:text="@string/quick_pick"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="bold"
        android:padding="50dp"
        android:background="@drawable/bg_lighter"
        android:layout_gravity="center"
        android:layout_marginLeft="210dp"
        android:layout_marginBottom="110dp"
        android:elevation="8dp"
        />

    <Button
        android:id="@+id/support_button"
        android:onClick="notImplemented"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:text="@string/support"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="bold"
        android:padding="50dp"
        android:background="@drawable/bg_lighter"
        android:layout_gravity="center"
        android:layout_marginRight="210dp"
        android:layout_marginTop="110dp"
        android:elevation="8dp"
        />

    <Button
        android:id="@+id/layout_button"
        android:onClick="browseMap"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:text="@string/layout"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="bold"
        android:padding="50dp"
        android:background="@drawable/bg_lighter"
        android:layout_gravity="center"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="110dp"
        android:elevation="8dp"
        />

    <Button
        android:id="@+id/unlock_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        />

</FrameLayout>
