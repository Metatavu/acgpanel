<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape>
            <solid
                android:color="@android:color/white"
                />
        </shape>
    </item>
    <item
        android:top="-6dp"
        android:right="-6dp"
        android:left="-6dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="4dp"
                android:color="#F0F0F0" />
        </shape>
    </item>
    <item
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
</layer-list>